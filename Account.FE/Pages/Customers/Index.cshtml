@page
@model Account.FE.Pages.Customers.IndexModel
@{
}
@{
    ViewData["Title"] = "Movie";
}

<table class="table">

    <thead>
        <tr>
            <th style="font-size: 0.75em; width:10%">
                @Html.DisplayNameFor(model => model.Customers[0].Id)
            </th>
            <th style="font-size: 0.75em; width:20%">
                @Html.DisplayNameFor(model => model.Customers[0].Name)
            </th>
            <th style ="font-size: 0.75em; width:20%">
                @Html.DisplayNameFor(model => model.Customers[0].Surname)
            </th>
            <th style="font-size: 0.75em; width:10%"></th>
            <th style="font-size: 0.75em; width:40%">Account</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td style="font-size: 0.75em; width:20%">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="font-size: 0.75em; width:10%">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style ="font-size: 0.75em; width:10%">
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td style=" width:10%">
                    <b> <a style="color:darkslategray"  asp-page="/Accounts/Index" asp-route-id="@item.Id">Add Account</a> <b />
                </td>
                <td style ="font-size: 0.75em; width:60%">
                    <table>                      
                        @foreach (var account in item.Accounts)
                        {
                            <tr>
                                <td>
                                    <b> Account: Balance: @Html.DisplayFor(modelItem => account.Balance) </b>
                                </td>
                                <td style="font-size: 0.90em; text-align:right">
                                    <b> CreatedDate:  @Html.DisplayFor(modelItem => account.CreatedDate) </b>
                                </td>
                             </tr>
                                    @foreach (var transaction in account.Transactions)
                                    {
                                        <tr>
                                    <td style="font-size: 0.90em; text-align:right; color:dimgray;">
                                                <b> Transaction: Amount: @Html.DisplayFor(modelItem => transaction.Amount) </b>
                                            </td>
                                    <td style="font-size: 0.85em; text-align:left; color:;">
                                                <b> Created Date:  @Html.DisplayFor(modelItem => transaction.CreatedDate) </b>
                                            </td>
                                        </tr>
                                    }
                         }
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
